<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <RelativeLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/gradient"
        tools:context=".login.EmailVerify"
        tools:visibility="gone">


        <ImageView
            android:id="@+id/logo2"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/logonew" />

        <EditText
            android:id="@+id/etCode"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/logo2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_email"
            android:ems="10"
            android:hint="Verifcation Code"
            android:inputType="textPersonName"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text=""
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewReservation3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_above="@+id/tResend2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnVerify"
                    android:layout_width="291dp"
                    android:layout_height="47dp"
                    android:layout_centerInParent="true"
                    android:background="#008B5858"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Verify"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tResend2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:text="Resend Code"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/gradient"
        tools:context=".login.RegisterActivity"
        tools:visibility="visible">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/logonew" />

        <EditText
            android:id="@+id/etFullname"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_login"
            android:ems="10"
            android:hint="Fullname"
            android:inputType="textPersonName"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etLogin"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/etFullname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_email"
            android:ems="10"
            android:hint="Email (gmail only for testing purpose)"
            android:inputType="textPersonName"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/etLogin"
            android:layout_alignStart="@+id/etFullname"
            android:layout_alignLeft="@+id/etFullname"
            android:layout_marginTop="16dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_password"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewReservation"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_above="@+id/tResend"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="291dp"
                    android:layout_height="47dp"
                    android:layout_centerInParent="true"
                    android:background="#008B5858"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Register"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:text="Already registered! Login Me."
            android:textSize="16sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/gradient"
        tools:context=".login.LoginActivity"
        tools:visibility="gone">


        <ImageView
            android:id="@+id/logo1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/logonew" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/logo1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_email"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/etEmail"
            android:layout_alignStart="@+id/etEmail"
            android:layout_alignLeft="@+id/etEmail"
            android:layout_marginTop="16dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_password"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewReservation1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_above="@+id/tResend1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="291dp"
                    android:layout_height="47dp"
                    android:layout_centerInParent="true"
                    android:background="#008B5858"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Login"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tResend1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:text="Register Here"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:text="Forgot Password"
            android:textSize="16sp"
            tools:visibility="gone" />
    </RelativeLayout>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/roundblack"
            android:paddingLeft="6dp"
            android:password="false"
            android:text="1"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Cart" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/round"
            android:paddingLeft="6dp"
            android:password="false"
            android:text="2"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Profile"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/roundblack"
            android:paddingLeft="6dp"
            android:password="false"
            android:text="3"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Payment" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/roundblack"
            android:paddingLeft="6dp"
            android:password="false"
            android:text="4"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Confirm" />
    </TableRow>

    <TextView
        android:id="@+id/buyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />


</RelativeLayout>
